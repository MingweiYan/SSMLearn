<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.SetmealDao">
    <!--  主键回显  -->
    <insert id="add" parameterType="seatmeal" keyProperty="id" useGeneratedKeys="true">
        insert into t_travelgroup(id, code, name, helpCode, sex, remark, attention)
        values ( #{id}, #{code}, #{name}, #{helpCode},  #{sex},  #{remark}, #{attention}, #{img})
    </insert>

    <select id="findPage" parameterType="string" resultType="seatmeal">
        select * from t_setmeal
    <where>
        <if test="queryString != null and queryString.length > 0">
            code = #{queryString} or name like concat('%', #{queryString}, '%') or helpCode = #{queryString}
        </if>
    </where>
    </select>

    <select id="findAll" resultType="seatmeal">
        select * from t_travelgroup
    </select>

    <select id="getTravelitemIdsByTravelGroupId" resultType="list">
        select travelitem_id from t_travelgroup_travelitem where travelgroup_id = #{value}
    </select>

    <update id="edit" parameterType="seatmeal">
        update t_travelgroup
        <!-- set 忽略不更新的列-->
        <set>
            <if test="code!=null and code.length>0">
                code=#{code},
            </if>
            <if test="name!=null and name.length>0">
                name=#{name},
            </if>
            <if test="sex!=null and sex.length>0">
                sex=#{sex},
            </if>
            <if test="helpCode!=null and helpCode.length>0">
                helpCode=#{helpCode},
            </if>
            <if test="remark!=null and remark.length>0">
                remark=#{remark},
            </if>
            <if test="attention!=null and attention.length>0">
                attention=#{attention},
            </if>
        </set>
        where id=#{id}
    </update>

    <insert id="setSetmealAndTravelGroup" parameterType="map">
        insert into t_setmeal_travelgroup(setmeal_id, travelgroup_id)
        VALUES(#{setmealId}, #{travelGroupId})
    </insert>

    <delete id="delete" parameterType="integer">
        delete from t_travelgroup_travelitem where travelgroup_id = #{value}
    </delete>

    <select id="getById" parameterType="integer" resultType="seatmeal">
        select * from t_travelgroup where id = #{id}
    </select>

</mapper>

